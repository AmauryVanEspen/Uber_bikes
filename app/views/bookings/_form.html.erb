<%= form_for @booking do |f| %>

    <div class="form-group">
       <%= f.label :start_date %>
       <%= f.text_field :start_date, placeholder: ". . ." %>
    </div>

    <div class="form-group">
       <%= f.label :end_date %>
       <%= f.text_field :end_date, placeholder: ". . ."   %>
    </div>

    <%= f.submit (@booking.new_record? ? "Create" : "Update") %>

<% end %>
